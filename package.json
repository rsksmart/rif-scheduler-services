{
  "name": "rif-scheduler-services",
  "version": "1.0.0",
  "description": "RIF Scheduler services",
  "main": "lib/service/index.js",
  "types": "lib",
  "scripts": {
    "start": "nodemon",
    "types": "npx typechain \"src/contracts/*.json\" --target=web3-v1 --out-dir src/contracts/types",
    "start:prod": "npm run build:prod && node lib/index.js",
    "demo": "nodemon --demo",
    "ganache": "npx ganache-cli",
    "test": "npx jest src/*/* --verbose --coverage --runInBand",
    "test:ci": "npx jest src/*/* --coverage --ci --runInBand",
    "test:watch": "npx jest src/*/* --verbose --coverage --watch --runInBand",
    "build": "rimraf ./lib && tsc",
    "build:prod": "rimraf ./lib && tsc -p tsconfig.json",
    "lint": "npx eslint ./src --ext .json,.js,.ts",
    "lint:fix": "npx eslint ./src --ext .json,.js,.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsksmart/rif-scheduler-services.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rsksmart/rif-scheduler-services/issues"
  },
  "homepage": "https://github.com/rsksmart/rif-scheduler-services#readme",
  "dependencies": {
    "@openzeppelin/test-helpers": "^0.5.11",
    "@truffle/hdwallet-provider": "^1.4.0",
    "bn.js": "^5.2.0",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "node-cron": "^3.0.0",
    "sqlite3": "^5.0.2",
    "tracer": "^1.1.5",
    "typeorm": "^0.2.34",
    "web3": "^1.3.6",
    "web3-eth-contract": "^1.3.6",
    "web3-utils": "^1.3.6"
  },
  "devDependencies": {
    "@typechain/web3-v1": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/node-cron": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "ganache-cli": "^6.12.2",
    "jest": "^27.0.4",
    "jest-junit": "^12.2.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  }
}
